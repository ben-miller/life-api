root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = tab
indent_size = 4
max_line_length = 120
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.gradle.kts]
indent_style = tab
indent_size = 4

[Procfile]
indent_style = space
indent_size = 2
